generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  images      String[]
  price       Int
  lable       String
  Favorite    Favorite?
}

model Favorite {
  id           Int     @id @default(autoincrement())
  userId       String  @unique
  foodId       Int     @unique
  favoriteFood Product @relation(fields: [foodId], references: [id])
}

model User {
  id           Int     @id @default(autoincrement())
  email        String? @unique
  password     String
  full_name    String?
  address_name String?
  privance     String
  city         String
  postal_code  String
  plate        String
  phoneNumber  String? @unique
}

model Order {
  id          Int      @id @default(autoincrement())
  userId      Int?
  title       String
  description String
  images      String[]
  price       Int
  isComplete  Boolean  @default(false)
}
